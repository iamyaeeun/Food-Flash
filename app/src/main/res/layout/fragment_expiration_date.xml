<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clickable="true"
    tools:context=".ExpirationDateFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="401dp"
        android:layout_height="69dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="15dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExpirationDate" />

    <android.widget.Button
        android:id="@+id/btnExpirationDate"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/solid_button"
        android:backgroundTint="#E6C9D3"
        android:contentDescription="카메라를 사용해 포장지의 유통기한 글씨를 인식한 후 음성 안내합니다"
        android:text="유통기한 촬영 및 \n음성 안내"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.widget.Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/solid_button"
        android:text="뒤로\n가기"
        android:textSize="20dp"
        android:contentDescription="뒤로 이동합니다"
        app:layout_constraintEnd_toStartOf="@+id/btnBackMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <android.widget.Button
        android:id="@+id/btnBackMain"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/solid_button"
        android:text="처음\n으로"
        android:textSize="20dp"
        android:contentDescription="첫 화면으로 돌아갑니다"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>